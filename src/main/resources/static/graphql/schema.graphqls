type Query {
    # ユーザー取得
    users(id: ID): [User]
    # 商品取得
    products(categoryId: Long): [Product!]!
}

type User {
    # ユーザーID
    id: ID!
    # 名前
    name: String!
    # お気に入りの商品
    favoriteProducts: [Product!]!
}

type Product {
    # 商品ID
    id: ID!
    # 商品名
    name: String!
    # 価格
    price: Long!
    # カテゴリーID
    categoryId: Long!
}